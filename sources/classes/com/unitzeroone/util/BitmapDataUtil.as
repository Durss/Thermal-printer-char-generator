package com.unitzeroone.util {	import flash.display.BitmapData;	import flash.filters.ColorMatrixFilter;	import flash.geom.Point;		/**	 * @author Ralph Hauwert	 */	public class BitmapDataUtil	{				public static const ORIGIN : Point = new Point();				/**		 * Desaturate color vector, by Paul Haeberli		 *			 * http://www.graficaobscura.com/matrix/index.html		 */		private static var rl:Number = 0.3086;		private static var gl:Number = 0.6094;		private static var bl:Number = 0.0820;				public static function desaturate(bitmapData:BitmapData):void		{			bitmapData.applyFilter(bitmapData, bitmapData.rect, ORIGIN, new ColorMatrixFilter([rl,gl,bl,0,0,rl,gl,bl,0, 0,rl,gl,bl,0,0,0,0,0,1,0]));		}			}}